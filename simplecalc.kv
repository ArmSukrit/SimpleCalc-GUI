#:kivy 2.0.0

<DefaultPage>:
    cols: 2
    output_label: output

    GridLayout:  # output and history log
        rows: 2

        Label:
            id: output
            text: "0"
            halign: "left"

        BoxLayout:
            orientation: "vertical"

    GridLayout:  # numpads and others
        cols: 4

        Button:
            text: "%"
            on_release: root.on_release(self)
        Button:
            text: "CE"
            on_release: root.on_release(self)
        Button:
            text: "C"
            on_release: root.on_release(self)
        Button:
            text: "<"
            on_release: root.on_release(self)
        Button:
            text: "1/x"
            on_release: root.on_release(self)
        Button:
            text: "x^2"
            on_release: root.on_release(self)
        Button:
            text: "sqrt(x)"
            on_release: root.on_release(self)
        Button:
            text: "/"
            on_release: root.on_release(self)
        Button:
            text: "7"
            on_release: root.on_release(self)
        Button:
            text: "8"
            on_release: root.on_release(self)
        Button:
            text: "9"
            on_release: root.on_release(self)
        Button:
            text: "x"
            on_release: root.on_release(self)
        Button:
            text: "4"
            on_release: root.on_release(self)
        Button:
            text: "5"
            on_release: root.on_release(self)
        Button:
            text: "6"
            on_release: root.on_release(self)
        Button:
            text: "-"
            on_release: root.on_release(self)
        Button:
            text: "1"
            on_release: root.on_release(self)
        Button:
            text: "2"
            on_release: root.on_release(self)
        Button:
            text: "3"
            on_release: root.on_release(self)
        Button:
            text: "+"
            on_release: root.on_release(self)
        Button:
            text: "+/-"
            on_release: root.on_release(self)
        Button:
            text: "0"
            on_release: root.on_release(self)
        Button:
            text: "."
            on_release: root.on_release(self)
        Button:
            text: "="
            on_release: root.on_release(self)

